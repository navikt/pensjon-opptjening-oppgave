<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="prod-gcp">
        <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%level %logger %msg %n</pattern>
            </encoder>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeCallerData>true</includeCallerData>
            </encoder>
        </appender>

        <include resource="secure-log.xml"/>

        <logger name="io" level="ERROR"/>
        <logger name="org" level="ERROR"/>
        <logger name="com" level="ERROR"/>
        <logger name="no.nav" level="INFO"/>
        <logger name="no.nav.security" level="ERROR"/>
        <logger name="no.nav.pensjon.opptjening.pensjonopptjeningoppgave" level="INFO"/>
        <logger name="no.nav.security.token.support.core.validation" level="ERROR"/>

        <root level="info">
            <appender-ref ref="stdout_json"/>
        </root>
    </springProfile>

    <springProfile name="dev-gcp">
        <appender name="STDOUT_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
        </appender>

        <logger name="io" level="ERROR">
            <appender-ref ref="STDOUT_JSON"/>
        </logger>
        <logger name="org" level="ERROR">
            <appender-ref ref="STDOUT_JSON"/>
        </logger>
        <logger name="com" level="ERROR">
            <appender-ref ref="STDOUT_JSON"/>
        </logger>
        <logger name="no.nav" level="DEBUG">
            <appender-ref ref="STDOUT_JSON"/>
        </logger>
        <logger name="no.nav.security" level="ERROR">
            <appender-ref ref="STDOUT_JSON"/>
        </logger>
        <logger name="no.nav.pensjon.opptjening.pensjonopptjeningoppgave" level="DEBUG">
            <appender-ref ref="STDOUT_JSON"/>
        </logger>
        <logger name="no.nav.security.token.support.core.validation" level="DEBUG">
            <appender-ref ref="STDOUT_JSON"/>
        </logger>
        <logger name="org.springframework.web.client.RestTemplate" level="DEBUG">
            <appender-ref ref="STDOUT_JSON"/>
        </logger>

        <include resource="secure-log.xml"/>

        <root level="info">
            <appender-ref ref="STDOUT_JSON"/>
        </root>
    </springProfile>

    <springProfile name="local">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="info">
            <appender-ref ref="STDOUT"/>
        </root>

        <logger name="io" level="ERROR"/>
        <logger name="org" level="ERROR"/>
        <logger name="com" level="ERROR"/>
        <logger name="no.nav" level="DEBUG"/>
        <logger name="no.nav.security" level="DEBUG"/>
        <logger name="no.nav.pensjon.opptjening.pensjonopptjeningoppgave" level="DEBUG"/>
    </springProfile>

</configuration>